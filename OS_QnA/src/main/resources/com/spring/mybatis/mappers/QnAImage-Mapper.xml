<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="QnAImage-Mapper">

	<select id="selectQnAImageList">
		select *
		from qnaimage
		where qnaid=#{qnaid}
	</select>

	<select id="selectQnAImageById" resultType="qnaimage">
		select *
		from qnaimage
		where qnaimageid=#{qnaimageid}
	</select>
	
	<select id="insertQnAimage" parameterType="qnaimage">
		insert into
		qnafile(qnaid, qnaimageid, qnaimagename, qnaimagetype)
		values(#{qnaid}, attach_seq.nextval, #{qnaimageid}, #{qnaimagename}, #{qnaimagetype})
	</select>
	
	<delete id="deleteQnAimage" parameterType="int">
		delete qnaimage
		where qnaimageid=#{qnaimageid}
	</delete>
	
	<delete id="deleteAllimage" parameterType="int">
		delete qnaimage
		where qnaimageid=#{qnaimageid}
	</delete>
	
</mapper>